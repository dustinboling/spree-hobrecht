/*
* Account Navigation
* * * * * * * * * * * * * * * * * * * */
#top-nav-bar {
  position: absolute;
  top: 0;
  right: 0;
}
nav#top-nav-bar ul li a {
  font-size: 11px;
  color: #888;
}


/*
* Main Navigation
* * * * * * * * * * * * * * * * * * * */
nav #main-nav-bar {
  text-transform: uppercase;
  border: none;
  list-style: none;
  margin: 0;
  padding: 0;
  text-align: center;
}
nav #main-nav-bar li {
  position:relative;
  display:inline;
}
nav #main-nav-bar li a {
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 1px;
  padding: 0px 10px;
}
/* nav #main-nav-bar li:first-child is defined by spree core.
   this is here to match it, */
nav #main-nav-bar li:nth-child(9) a {
  padding-right: 0px;
}
nav #main-nav-bar a {
  display: inline-block;
  padding: 10px;
}
nav #main-nav-bar ul {
  position:absolute;
  /*top:100%; Uncommenting this makes the dropdowns work in IE7 but looks a little worse in all other browsers. Your call. */
  left:-9999px;
  margin:0;
  padding:0;
  text-align:left;
}
nav #main-nav-bar ul li {
  display:block;
}
nav #main-nav-bar li:hover ul {
  left:0;
}
nav #main-nav-bar li:hover ul a {
  text-decoration:none;
  background:none;
}
nav #main-nav-bar ul a {
  white-space:nowrap;
  display:block;
  border-bottom:1px solid #ccc;
}


