/*
* Products
* * * * * * * * * * * * * * * * * * * */
ul#products li {
  font-weight: normal;
  margin-bottom: 70px;
  margin-top: 70px;
}
ul#products li .product-image {
  border: none;
  padding: 0;
}
ul#products li a.info {
  color: #888;
  border-bottom: none;
}


/*
* Product
* * * * * * * * * * * * * * * * * * * */
#product-images #main-image {
  border: none;
}
#product-description .product-title {
  border: none;
  text-transform: uppercase;
  letter-spacing: 2px;
}
#product-variants {
  text-transform: uppercase;
}
#product-variants ul {
  list-style: none;
}
div[data-hook="description"] {
  line-height: 1.9;
  margin: 20px 0;
}
span.variant-dimensions {
  color: #888;
  font-weight: 700;
}

/*
* Cart
* * * * * * * * * * * * * * * * * * * */
div[data-hook="cart_container"] h1 {
  margin-bottom: 30px;
  text-align: center;
  text-transform: uppercase;
}
span.price,
#checkout-summary table tr[data-hook="item_total"] td:last-child strong,
#checkout-summary table #summary-order-total, #order_details td.price span,
#order_details td.total span,
#order_summary td.price span,
#order_summary td.total span,
table#cart-detail tbody#line_items tr td[data-hook="cart_item_price"],
table#cart-detail tbody#line_items tr td[data-hook="cart_item_total"],
div[data-hook="inside_cart_form"] #subtotal span.order-total {
  font-weight: inherit;
  color: inherit;
}
.cart-subtotal,
.cart-total {
  background-color: #D9D9DB;
  text-transform: uppercase;
}
.cart-subtotal td h5,
.cart-total td h5 {
  color: #000;
}
.progress-steps li.current-first,
.progress-steps li.current {
  background-color: #000;
  color: #FFF;
}
#billing legend,
#shipping legend,
#shipping_method legend,
#payment legend,
#order_details legend,
#order_summary legend {
  text-transform: uppercase;
  font-weight: bold;
  font-size: 14px;
  color: #000;
  padding: 5px;
  margin-left: 15px;
}


/*
* Tables
* * * * * * * * * * * * * * * * * * * */
table tbody tr.alt,
table tbody tr.odd,
table tfoot tr.alt,
table tfoot tr.odd {
background-color: #f2f2f2;
}


/*
* Forms
* * * * * * * * * * * * * * * * * * * */
input[type="submit"],
input[type="button"],
input[type="reset"],
button,
a.button {
  background-color: #000;
  background-image: none;
  text-shadow: none;
  text-transform: uppercase;
  color: #FFF;
  font-weight: 900;
  font-size: 12px;
  font-family: "Lato", sans-serif;
  letter-spacing: 1px;
  border: none;
  padding: 6px 10px 5px;
  vertical-align: top;
  -webkit-font-smoothing: antialiased;
  -webkit-box-shadow: none;
  -khtml-box-shadow: none;
  -moz-box-shadow: none;
  -o-box-shadow: none;
  box-shadow: none;
  -webkit-border-radius: 0px;
  -khtml-border-radius: 0px;
  -moz-border-radius: 0px;
