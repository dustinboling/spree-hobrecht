<style type="text/css">
.announcement {
  display: block;
  width: 100%;
  height: 60px;
  position: relative;
  background: #ddd;
  padding: 20px 0;
  text-align: center;
}

.announcement svg {
  position: absolute;
  top: 0;
  left: 0;
}

.announcement svg line {
  stroke-width: 5;
  stroke: #000;
  fill: none;
  stroke-dasharray: 1000;
  -webkit-transition: all .6s;
  transition: transform .6s;
}

.announcement:hover svg line.top {
  -webkit-transform: translateX(-960px);
  transform: translateX(-960px);
}

.announcement:hover svg line.bottom {
  -webkit-transform: translateX(960px);
  transform: translateX(960px);
}

.announcement:hover svg line.left {
  -webkit-transform: translateY(200px);
  transform: translateY(200px);
}

.announcement:hover svg line.right {
  -webkit-transform: translateY(-100px);
  transform: translateY(-100px);
}
</style>
  <a class="announcement" href="/products/mayweather">
    <svg width="960" height="100">
      <line class="top" x1="960" y1="0" x2="1920" y2="0"/>
      <line class="left" x1="0" y1="0" x2="0" y2="-200"/>
      <line class="bottom" x1="0" y1="100" x2="-960" y2="100"/>
      <line class="right" x1="960" y1="100" x2="960" y2="200"/>
      <h2>New Mayweather</h2>
      <h2>Painting in Progress!</h2>
    </svg>
  </a>

<% if Spree::Slide.published.count > 0 %>

  <div id="slider" class="idealSlider">
    <% Spree::Slide.published.order('position ASC').each do |s| %>
      <% if s.body != "" %>
        <%= link_to image_tag('', :data => { :src => s.slide_image.url, :caption => '#' + s.slide_name.to_url }), url_for(s.slide_link) %>
      <% else %>
        <%= link_to image_tag('', :data => { :src => s.slide_image.url }), url_for(s.slide_link) %>
      <% end %>
    <% end %>
  </div>

  <% Spree::Slide.published.order('position ASC').each do |s| %>
    <div id="<%= s.slide_name.to_url %>" class="ideal-html-caption" style="display:none;">
      <%= raw s.body %>
    </div>
  <% end %>


  <script type="text/javascript">
  $(window).load(function() {
      var slider = new IdealImageSlider.Slider({
        selector: '#slider',
        height: 600,
        effect: 'fade',
        interval: 10000,
        transitionDuration: 3000
      });
      slider.addCaptions();
      //slider.addBulletNav();
      slider.start();
  });
  </script>
<% end %>
